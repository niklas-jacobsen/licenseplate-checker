generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model NumberplateRequest {
  id      Int    @id @default(autoincrement())
  city    String @default("MS") @db.VarChar(3)
  letters String @db.VarChar(2)
  numbers String @db.VarChar(4)
  status  Status @default(UNCHECKED)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  expiresAt DateTime?
}

model RequestParams {
  id           String     @id @default(cuid())
  salutation   Salutation @default(HERR)
  lastname     String
  birthdate    DateTime
  street       String
  streetNumber String
  zipcode      Int
  city         String
}

enum Status {
  UNCHECKED
  NOT_AVAILABLE
  AVAILABLE
  RESERVED
}

enum Salutation {
  HERR
  FRAU
  FIRMA
  VEREIN
  JURISTISCHE_PERSON
}
