{
  "name": "licenseplate-checker",
  "private": true,
  "version": "1.0.0",
  "packageManager": "bun@1.2.10",
  "workspaces": ["apps/api", "apps/web", "packages/shared"],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
