{
  "name": "licenseplate-checker",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest __tests__",
    "start": "bun run src/index.ts",
    "dev": "bun run --watch src/index.ts",
    "lint-build": "rm -rf ./dist/* && npm run lint && tsc",
    "build": "rm -rf ./dist/* && tsc",
    "lint": "bunx eslint **/*.ts",
    "db:format": "prisma format",
    "db:generate": "npm run db:format && prisma generate",
    "db:migrate": "npm run db:generate && prisma migrate dev --name migration",
    "db:reset": "prisma migrate reset --force && npm run db:migrate",
    "db:seed": "node prisma/seeding/seed.js",
    "start:migrate:prod": "prisma migrate deploy && node dist/src/index.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^22.7.4",
    "prismock": "^1.33.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4.1",
    "@playwright/test": "^1.47.2",
    "@prisma/client": "^5.20.0",
    "dotenv": "^16.4.5",
    "hono": "^4.6.3",
    "prisma": "^5.20.0",
    "zod": "^3.23.8"
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  },
  "prettier": {
    "singleQuote": true
  }
}
