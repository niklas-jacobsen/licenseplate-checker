{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "dev": {
      "cache": false
    },
    "lint": {
      "outputs": []
    },
    "format": {
      "outputs": []
    },
    "test:unit": {
      "outputs": []
    },
    "test:int": {
      "outputs": []
    },
    "typecheck": {
      "outputs": []
    },
    "db:generate": {
      "outputs": ["node_modules/.prisma/**"]
    },
    "db:migrate": {
      "dependsOn": ["db:generate"],
      "outputs": ["prisma/migrations/**"]
    },
    "scraper": {
      "cache": false
    }
  }
}
